[colors]
background     = #00051b
background-alt = #041021
foreground     = #d4d9e4
blue           = #0073df
red            = #db0726
green          = #00c06f
yellow         = #e3e600
magenta        = #ff69ff


[bar/status]
monitor = DP-2
width = 100%
height = 30

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.blue}

padding-right = 2

module-margin = 2

font-0 = "Roboto Condensed:pixelsize=12;0"
font-1 = "Font Awesome 5 Free Solid:pixelsize=12;0"

modules-left = i3
modules-center = date
modules-right = volume wired-network cpu memory storage usb

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[bar/sec]
monitor = HDMI-0
width = 100%
height = 30

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.blue}

padding-right = 2

module-margin = 2

font-0 = "Roboto Condensed:pixelsize=12;0"
font-1 = "Font Awesome 5 Free Solid:pixelsize=12;0"

modules-left = i3
modules-right = date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; mode = i3 is in another mode such as resize
label-mode-padding = ${self.label-focused-padding}
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background-alt}
label-mode-underline = ${colors.blue}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 2
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.blue}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = ${self.label-focused-padding}
label-urgent-background = ${colors.red}


[module/wired-network]
type = internal/network
interface = enp37s0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-underline = ${colors.green}
label-connected =  %downspeed% %local_ip%


[module/wireless-network]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-underline = ${colors.red}
label-connected = %essid%

format-disconnected =


[module/cpu]
type = internal/cpu
interval = 2

format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.yellow}
label = %percentage:2%%


[module/memory]
type = internal/memory
interval = 2

format-prefix = " "
format-underline = ${colors.red}
label = %gb_used%


[module/usb]
type = internal/fs
mount-0 = /media
intelval = 10

format-mounted-prefix = " "
format-mounted-underline = ${colors.magenta}
label-mounted = %percentage_used%%

label-unmounted = 

[module/volume]
type = internal/pulseaudio

format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground}
format-volume-underline = ${colors.blue}

format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.blue}
format-muted-underline = ${self.format-volume-underline}

[module/date]
type = internal/date
interval = 1

date = %d-%m-%Y
date-alt =

time = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.blue}

label = %date% %time%

[settings]
screenchange-reload = true

